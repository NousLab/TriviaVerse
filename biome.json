{
    "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
    "organizeImports": {
      "enabled": true
    },
    "linter": {
      "enabled": true,
      "rules": {
        "recommended": true,
        "correctness": {
          "noUnusedVariables": "error",
          "noUndeclaredVariables": "error",
          "useExhaustiveDependencies": "error"
        },
        "suspicious": {
          "noExplicitAny": "error",
          "noConsoleLog": "warn"
        },
        "style": {
          "noNonNullAssertion": "error",
          "useConst": "error",
          "useTemplate": "error"
        }
      }
    },
    "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "indentWidth": 2,
      "lineWidth": 80,
      "ignore": []
    },
    "javascript": {
      "formatter": {
        "quoteStyle": "single",
        "trailingComma": "es5",
        "semicolons": "always"
      }
    }
  }